<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/profile_layout"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ci_profile"
            android:layout_marginHorizontal="130dp"
            android:layout_marginBottom="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_myself"
            android:layout_below="@id/ci_profile"
            android:textAlignment="center"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deskripsi"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/social_media"
            android:layout_below="@id/tv_myself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:text="Social Media"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/LL_social_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/social_media"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/instagram"/>

            <ImageButton
                android:id="@+id/ib_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:background="@color/white"
                android:src="@drawable/facebook"/>

            <ImageButton
                android:id="@+id/ib_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:background="@color/white"
                android:src="@drawable/whatsapp"/>

            <ImageButton
                android:id="@+id/ib_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/github"/>

        </LinearLayout>

        <TextView
            android:id="@+id/find_me"
            android:layout_below="@id/LL_social_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Find Me"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_temukan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/splash_background"
            android:text="Temukan"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_below="@id/find_me"/>

        <TextView
            android:id="@+id/tv_about"
            android:layout_below="@id/btn_temukan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="About"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/splash_background"
            android:text="Tentang Aplikasi"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_below="@id/tv_about"/>

    </RelativeLayout>

</LinearLayout>